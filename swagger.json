    "paths":{
     "/api/v1/otps/resend": {
          "post": {
              "summary": "Sends a four(4) digit OTP",
              "tags": [
                 "otps"
              ],
              "description":"Generates a random four(4) digit Otp used to verify users email on signup",
              "requestBody": {
               "required": true,
               "content": {
                   "application/json": {
                       "schema": {
                           "type": "object",
                           "properties": {
                               "email": {
                                   "type": "string"
                               }
                           },
                           "required": [
                               "email"
                           ]
                       }
                   }
               }
           },
              "responses": {
                  "201": {
                      "description": "An object containing status data and message",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "type": "object",
                                  "properties": {
                                   "status": {
                                        "type": "string"
                                   },
                                   "data":{
                                        "type": "string",
                                        "example": null
                                   },
                                   "mesage": {
                                        "type":"string"
                                   }
                                  }
                              }
                          }
                      }
                  }
              }
          }
      },
      "/api/v1/otps/verify": {
          "post": {
              "summary": "Verifies an OTP",
              "tags": [
                 "otps"
              ],
              "description":"Checks if OTP is still active and verifies it",
              "requestBody": {
               "required": true,
               "content": {
                   "application/json": {
                       "schema": {
                           "type": "object",
                           "properties": {
                               "otp": {
                                   "type": "string"
                               }
                           },
                           "required": [
                               "otp"
                           ]
                       }
                   }
               }
           },
              "responses": {
                  "201": {
                      "description": "An object containing status data and message",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "type": "object",
                                  "properties": {
                                   "status": {
                                        "type": "string"
                                   },
                                   "data":{
                                        "type": "string",
                                        "example": null
                                   },
                                   "mesage": {
                                        "type":"string"
                                   }
                                  }
                              }
                          }
                      }
                  }
              }
          }
      }
    }
 }